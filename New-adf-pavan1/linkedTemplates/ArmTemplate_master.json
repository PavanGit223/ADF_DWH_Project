{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "New-adf-pavan1"
		},
		"LS_dwh_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'LS_dwh'"
		},
		"LS_fusion_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'LS_fusion'"
		},
		"ADF_key_valut_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://key-valut-adf.vault.azure.net/"
		},
		"ADLS_Gen2_fusion_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "@{concat('https://adlsfusion',linkedService().environment,'.dfs.core.windows.net/')}"
		},
		"AzureSqlDatabase1_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "@{concat(linkedService().Server_Name_dwh,'.database.windows.net')}"
		},
		"AzureSqlDatabase1_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "@{linkedService().db_name_dwh}"
		},
		"AzureSqlDatabase1_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "@{linkedService().db_username}"
		},
		"HttpServer1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://jsonplaceholder.typicode.com"
		},
		"LS_dummyJson_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dummyjson.com/products"
		},
		"Ls_JsonPlaceHolder_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://jsonplaceholder.typicode.com/"
		},
		"azure_Dev_db_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "sql-bd-dev-server.database.windows.net"
		},
		"azure_Dev_db_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "db_dev"
		},
		"azure_Dev_db_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "pavanbd_dev"
		},
		"ls_fusion_dev_adls_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "@{linkedService().adls_url}"
		},
		"ls_fusion_input_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://adlsfusiondev.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "New-adf-pavan1_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"LS_dwh_connectionString": {
						"value": "[parameters('LS_dwh_connectionString')]"
					},
					"LS_fusion_connectionString": {
						"value": "[parameters('LS_fusion_connectionString')]"
					},
					"ADF_key_valut_properties_typeProperties_baseUrl": {
						"value": "[parameters('ADF_key_valut_properties_typeProperties_baseUrl')]"
					},
					"HttpServer1_properties_typeProperties_url": {
						"value": "[parameters('HttpServer1_properties_typeProperties_url')]"
					},
					"LS_dummyJson_properties_typeProperties_url": {
						"value": "[parameters('LS_dummyJson_properties_typeProperties_url')]"
					},
					"Ls_JsonPlaceHolder_properties_typeProperties_url": {
						"value": "[parameters('Ls_JsonPlaceHolder_properties_typeProperties_url')]"
					},
					"ADLS_Gen2_fusion_properties_typeProperties_url": {
						"value": "[parameters('ADLS_Gen2_fusion_properties_typeProperties_url')]"
					},
					"AzureSqlDatabase1_properties_typeProperties_server": {
						"value": "[parameters('AzureSqlDatabase1_properties_typeProperties_server')]"
					},
					"AzureSqlDatabase1_properties_typeProperties_database": {
						"value": "[parameters('AzureSqlDatabase1_properties_typeProperties_database')]"
					},
					"AzureSqlDatabase1_properties_typeProperties_userName": {
						"value": "[parameters('AzureSqlDatabase1_properties_typeProperties_userName')]"
					},
					"azure_Dev_db_properties_typeProperties_server": {
						"value": "[parameters('azure_Dev_db_properties_typeProperties_server')]"
					},
					"azure_Dev_db_properties_typeProperties_database": {
						"value": "[parameters('azure_Dev_db_properties_typeProperties_database')]"
					},
					"azure_Dev_db_properties_typeProperties_userName": {
						"value": "[parameters('azure_Dev_db_properties_typeProperties_userName')]"
					},
					"ls_fusion_dev_adls_properties_typeProperties_url": {
						"value": "[parameters('ls_fusion_dev_adls_properties_typeProperties_url')]"
					},
					"ls_fusion_input_properties_typeProperties_url": {
						"value": "[parameters('ls_fusion_input_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "New-adf-pavan1_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'New-adf-pavan1_ArmTemplate_0')]"
			]
		}
	]
}